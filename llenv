TEXT_TABLE

s/^  //mg for values %fatpacked;

unshift @INC, sub {
  if (my $fat = $fatpacked{$_[1]}) {
    open my $fh, '<', \$fat
      or die "FatPacker error loading $_[1] (could be a perl installation issue?)";
    return $fh;
  }
  return
};

} # END OF FATPACK CODE

use strict;
use App::llenv;

unless (caller) {
    my $app = App::llenv->new;
    $app->init;
    $app->parse_options(@ARGV);
    $app->run or exit(1);
}

